#!/bin/bash

# OPENSHIFT_DATA_DIR - A persistent directory for data which is guaranteed to never be deleted

SBT_VERSION="0.13.5"

cd ${OPENSHIFT_DATA_DIR}

wget http://dl.bintray.com/sbt/native-packages/sbt/${SBT_VERSION}/sbt-${SBT_VERSION}.zip -O sbt.zip
unzip sbt.zip
rm sbt.zip

ln -s ${OPENSHIFT_DATA_DIR}/sbt/bin/sbt ${OPENSHIFT_DATA_DIR}/sbt
